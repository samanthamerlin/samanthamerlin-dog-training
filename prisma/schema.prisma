generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================
// AUTHENTICATION (Auth.js)
// ===================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  role          UserRole  @default(CLIENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts               Account[]
  sessions               Session[]
  clientProfile          ClientProfile?
  tierPurchases          TierPurchase[]
  subscriptions          Subscription[]
  lessonProgress         LessonProgress[]
  emailRecipients        EmailRecipient[]
  notificationPreference NotificationPreference?

  @@map("users")
}

enum UserRole {
  ADMIN
  CLIENT
  SUBSCRIBER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===================
// CLIENT MANAGEMENT
// ===================

model ClientProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  phone            String?
  address          String?
  city             String?
  state            String?  @default("CA")
  zipCode          String?
  emergencyContact String?
  emergencyPhone   String?
  notes            String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  dogs            Dog[]
  bookingRequests BookingRequest[]
  invoices        Invoice[]

  @@map("client_profiles")
}

model Dog {
  id        String     @id @default(cuid())
  clientId  String
  name      String
  breed     String?
  birthDate DateTime?
  weight    Decimal?   @db.Decimal(5, 2)
  gender    DogGender?
  isNeutered Boolean   @default(false)
  color     String?
  photoUrl  String?

  // Health & Requirements
  vaccinationsUpToDate Boolean   @default(false)
  vaccinationExpiry    DateTime?
  medicalConditions    String?   @db.Text
  medications          String?   @db.Text
  dietaryNeeds         String?   @db.Text

  // Behavior
  temperament        String?       @db.Text
  goodWithOtherDogs  Boolean       @default(true)
  goodWithChildren   Boolean       @default(true)
  trainingLevel      TrainingLevel @default(NONE)
  specialInstructions String?      @db.Text

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client         ClientProfile   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  bookingDogs    BookingDog[]
  serviceRecords ServiceRecord[]

  @@map("dogs")
}

enum DogGender {
  MALE
  FEMALE
}

enum TrainingLevel {
  NONE
  BASIC
  INTERMEDIATE
  ADVANCED
}

// ===================
// SERVICES & BOOKING
// ===================

model ServiceType {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?   @db.Text
  basePrice   Decimal   @db.Decimal(10, 2)
  priceUnit   PriceUnit @default(PER_SESSION)
  duration    Int?      // Duration in minutes
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  bookingRequests BookingRequest[]
  serviceRecords  ServiceRecord[]

  @@map("service_types")
}

enum PriceUnit {
  PER_HOUR
  PER_SESSION
  PER_DAY
}

model BookingRequest {
  id            String        @id @default(cuid())
  clientId      String
  serviceTypeId String
  status        BookingStatus @default(PENDING)

  // Request Details
  requestedDate DateTime
  requestedTime String?       // e.g., "morning", "afternoon", or specific time
  duration      Int?          // Requested duration in minutes
  notes         String?       @db.Text

  // Admin Response
  confirmedDate   DateTime?
  confirmedTime   DateTime?
  adminNotes      String?   @db.Text
  rejectionReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client        ClientProfile  @relation(fields: [clientId], references: [id])
  serviceType   ServiceType    @relation(fields: [serviceTypeId], references: [id])
  dogs          BookingDog[]
  serviceRecord ServiceRecord?

  @@map("booking_requests")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  REJECTED
  CANCELLED
  COMPLETED
  NO_SHOW
}

model BookingDog {
  id               String @id @default(cuid())
  bookingRequestId String
  dogId            String

  bookingRequest BookingRequest @relation(fields: [bookingRequestId], references: [id], onDelete: Cascade)
  dog            Dog            @relation(fields: [dogId], references: [id])

  @@unique([bookingRequestId, dogId])
  @@map("booking_dogs")
}

// ===================
// SERVICE TRACKING & INVOICING
// ===================

model ServiceRecord {
  id               String  @id @default(cuid())
  bookingRequestId String? @unique
  serviceTypeId    String
  dogId            String?

  // Service Details
  serviceDate DateTime
  startTime   DateTime?
  endTime     DateTime?
  duration    Int       // Actual duration in minutes

  // Pricing
  quantity    Decimal @db.Decimal(5, 2) @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)
  adjustments Decimal @db.Decimal(10, 2) @default(0)
  total       Decimal @db.Decimal(10, 2)

  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookingRequest BookingRequest? @relation(fields: [bookingRequestId], references: [id])
  serviceType    ServiceType     @relation(fields: [serviceTypeId], references: [id])
  dog            Dog?            @relation(fields: [dogId], references: [id])
  invoiceItems   InvoiceItem[]

  @@map("service_records")
}

model Invoice {
  id            String @id @default(cuid())
  invoiceNumber String @unique
  clientId      String

  // Period
  periodStart DateTime
  periodEnd   DateTime
  issueDate   DateTime @default(now())
  dueDate     DateTime

  // Amounts
  subtotal   Decimal       @db.Decimal(10, 2)
  tax        Decimal       @db.Decimal(10, 2) @default(0)
  total      Decimal       @db.Decimal(10, 2)
  amountPaid Decimal       @db.Decimal(10, 2) @default(0)
  status     InvoiceStatus @default(DRAFT)

  notes String? @db.Text

  // Payment
  stripeInvoiceId String?
  paidAt          DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client   ClientProfile @relation(fields: [clientId], references: [id])
  items    InvoiceItem[]
  payments Payment[]

  @@map("invoices")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  PARTIAL
  OVERDUE
  CANCELLED
}

model InvoiceItem {
  id              String  @id @default(cuid())
  invoiceId       String
  serviceRecordId String?
  description     String
  quantity        Decimal @db.Decimal(5, 2)
  unitPrice       Decimal @db.Decimal(10, 2)
  total           Decimal @db.Decimal(10, 2)

  invoice       Invoice        @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  serviceRecord ServiceRecord? @relation(fields: [serviceRecordId], references: [id])

  @@map("invoice_items")
}

model Payment {
  id        String        @id @default(cuid())
  invoiceId String
  amount    Decimal       @db.Decimal(10, 2)
  method    PaymentMethod
  status    PaymentStatus @default(PENDING)

  // External IDs
  stripePaymentId String?
  paypalPaymentId String?

  paidAt    DateTime?
  notes     String?
  createdAt DateTime  @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id])

  @@map("payments")
}

enum PaymentMethod {
  STRIPE
  PAYPAL
  CASH
  CHECK
  OTHER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ===================
// TRAINING CONTENT & SUBSCRIPTIONS
// ===================

model ContentTier {
  id          String  @id @default(cuid())
  name        String  @unique // "Foundation", "Intermediate", "Advanced"
  slug        String  @unique
  description String? @db.Text
  price       Decimal @db.Decimal(10, 2)
  sortOrder   Int     @default(0)
  isActive    Boolean @default(true)

  // Stripe
  stripeProductId String?
  stripePriceId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  modules   ContentModule[]
  purchases TierPurchase[]

  @@map("content_tiers")
}

model ContentModule {
  id          String  @id @default(cuid())
  tierId      String
  title       String
  slug        String
  description String? @db.Text
  sortOrder   Int     @default(0)
  isPublished Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tier    ContentTier     @relation(fields: [tierId], references: [id])
  lessons ContentLesson[]

  @@unique([tierId, slug])
  @@map("content_modules")
}

model ContentLesson {
  id          String  @id @default(cuid())
  moduleId    String
  title       String
  slug        String
  description String? @db.Text

  // Video
  youtubeVideoId String? // Unlisted YouTube video ID
  videoDuration  Int?    // Duration in seconds

  // Additional Content
  content   String? @db.Text // Markdown content
  resources Json?   // Array of downloadable resources

  sortOrder     Int     @default(0)
  isPublished   Boolean @default(false)
  isFreePreview Boolean @default(false) // Allow preview without purchase

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  module   ContentModule    @relation(fields: [moduleId], references: [id])
  progress LessonProgress[]

  @@unique([moduleId, slug])
  @@map("content_lessons")
}

model TierPurchase {
  id     String @id @default(cuid())
  userId String
  tierId String

  // Payment
  amount          Decimal @db.Decimal(10, 2)
  stripePaymentId String?

  purchasedAt DateTime  @default(now())
  expiresAt   DateTime? // null = lifetime access

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tier ContentTier @relation(fields: [tierId], references: [id])

  @@unique([userId, tierId])
  @@map("tier_purchases")
}

model Subscription {
  id     String           @id @default(cuid())
  userId String
  type   SubscriptionType
  status SubscriptionStatus @default(ACTIVE)

  // Stripe
  stripeSubscriptionId String?
  stripeCustomerId     String?

  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean   @default(false)
  cancelledAt        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

enum SubscriptionType {
  LIVE_SUPPORT // Monthly live Q&A/support subscription
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
}

model LessonProgress {
  id           String   @id @default(cuid())
  lessonId     String
  userId       String
  isCompleted  Boolean  @default(false)
  lastPosition Int      @default(0) // Video position in seconds
  completedAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  lesson ContentLesson @relation(fields: [lessonId], references: [id])
  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([lessonId, userId])
  @@map("lesson_progress")
}

// ===========================================
// EMAIL CAMPAIGNS
// ===========================================

model EmailCampaign {
  id          String             @id @default(cuid())
  name        String
  subject     String
  content     String             @db.Text // HTML content
  status      EmailCampaignStatus @default(DRAFT)

  // Targeting
  targetAll   Boolean            @default(false)
  targetRoles String[]           // e.g., ["CLIENT", "SUBSCRIBER"]

  // Stats
  sentCount   Int                @default(0)
  openCount   Int                @default(0)
  clickCount  Int                @default(0)

  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  recipients  EmailRecipient[]

  @@map("email_campaigns")
}

enum EmailCampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}

model EmailRecipient {
  id         String   @id @default(cuid())
  campaignId String
  userId     String
  email      String
  status     EmailSendStatus @default(PENDING)
  sentAt     DateTime?
  openedAt   DateTime?
  clickedAt  DateTime?
  error      String?
  createdAt  DateTime @default(now())

  campaign EmailCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([campaignId, userId])
  @@map("email_recipients")
}

enum EmailSendStatus {
  PENDING
  SENT
  OPENED
  CLICKED
  BOUNCED
  FAILED
}

// Notification preferences for clients
model NotificationPreference {
  id     String @id @default(cuid())
  userId String @unique

  // Email preferences
  bookingReminders    Boolean @default(true)
  bookingUpdates      Boolean @default(true)
  invoiceNotifications Boolean @default(true)
  marketingEmails     Boolean @default(true)
  trainingUpdates     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notification_preferences")
}
